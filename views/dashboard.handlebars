<section class="row">
  <div class = "column">
    <h2>Post Your Thoughts or Ideas</h2>

    <form class="new-post-form">
      <div>
        <label for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" />
      </div>
      <div>
        <label for="post-text">Text</label>
        <textarea id="post-text" name="post-text"></textarea>
      </div>
      <button type="submit" class="btn">Add</button>
    </form>
  </div>
  <div class = "column">
    <h2>About Me</h2>
    {{> user-info}}
  </div>

</section>

{{#if posts.length}}
<section>
  <h2>Your Blog Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit blog post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}



<script src="/javascript/add-post.js"></script>